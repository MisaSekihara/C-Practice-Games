<Page x:Class="Pet.Pages.SnakePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="660" d:DesignWidth="1050"
	  Title="SnakePage">

    <UserControl Background="Black" Focusable="True" Loaded="UserControl_Loaded">
        <Canvas Name="MyCanvas" Height="440" Width="820" Background="#FF636C60">
            <Label Content="Score" Name="ScoreNameLabel" Canvas.Left="1" Canvas.Top="466" FontFamily="OCR A Std" Foreground="#FF00FF38" FontSize="18"/>
            <Label Content="0" Name="ScoreLabel" Canvas.Left="94" Canvas.Top="466" FontFamily="OCR A Std" Foreground="#FF00FF38" FontSize="18"/>
            <Label Content="00:00" Name="TimerLabel" Canvas.Left="232" Canvas.Top="466" FontFamily="OCR A Std" Foreground="#FF00FF38" FontSize="18"/>
        </Canvas>
    </UserControl>
</Page>
